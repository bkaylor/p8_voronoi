pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
function _init()
end

function _update()
 points = {}
 
 for i=0, 15 do
  point = {}
  point.x = flr(rnd(127))
  point.y = flr(rnd(127))
  point.color = i
  add(points, point)
 end
end

function _draw()
 cls()
 
 for i=0, 127 do
  for j=0, 127 do
   distances = {}
   for point in all(points) do
    -- (xa-xb)**2+(ya-yb)**2
    t1 = (i-point.x)*(i-point.x)
    t2 = (j-point.y)*(j-point.y)
    distance = {}
    distance.d = t1 + t2
    distance.color = point.color
    add(distances, distance)
   end
   
   closest = distances[1]
   for distance in all(distances) do
    if distance.d < closest.d then
     closest = distance
    end
   end
   
   pset(i, j, closest.color)
  end
 end
end
